<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/image_header"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        app:layout_constraintVertical_bias="1.0"
        android:background="@color/colorPrimary"
        android:src="@drawable/background_image_with_alpha"
        app:layout_collapseMode="parallax" />

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:drawableStart="@drawable/arrowback"
        android:drawableTint="@color/white"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppinsregular"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center|left"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profileLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                app:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/person"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/poppinsregular"
                    android:hint="Enter Full Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                app:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/userNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/contact"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/poppinsregular"
                    android:hint="Enter Mobile Number"
                    android:digits="0123456789"
                    android:maxLength="10"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Mobile Number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                app:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_email"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/poppinsregular"
                    android:hint="Enter Email Address"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Email" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:boxCornerRadiusBottomEnd="5dp"
                app:boxCornerRadiusBottomStart="5dp"
                app:boxCornerRadiusTopEnd="5dp"
                app:boxCornerRadiusTopStart="5dp"
                android:gravity="center"
                app:boxStrokeColor="@color/light_black"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColorHint="@color/light_black">

                <com.andreabaccega.widget.FormEditText
                    android:id="@+id/userAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_baseline_my_location_24"
                    android:drawableTint="@color/light_black"
                    android:fontFamily="@font/poppinsregular"
                    android:hint="Enter Address"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:paddingStart="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    whatever:emptyErrorString="Please Fill This"
                    whatever:testErrorString="Enter Valid Address" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/SaveButton"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="25dp"
                android:text="Update"
                android:textSize="17sp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/updateborder"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/profileLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="175dp"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/profileimg"
            app:civ_border_color="@color/white"
            app:civ_border_width="5dp" />

        <ImageView
            android:id="@+id/profile_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/add_circle"
            android:tint="@color/light_black"
            tools:ignore="VectorDrawableCompat" />

    </RelativeLayout>

</RelativeLayout>