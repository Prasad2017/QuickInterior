<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/appbar"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/arrowback"
            android:backgroundTint="@color/white"
            android:visibility="visible"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/back"
            android:text="Edit Stock"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppinsregular"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Product Name"/>

        <EditText
            android:id="@+id/edtStockproduct"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:hint="Product name"/>

        <TextView
            android:id="@+id/textRecived"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability Stock"/>

        <EditText
            android:id="@+id/edtStockAvail"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:hint="50"
            android:inputType="number"/>

        <TextView
            android:id="@+id/textConsumed"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Received Stock"/>

        <EditText
            android:id="@+id/edtStockreceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="50"
            android:fontFamily="@font/poppinsregular"
            android:inputType="number"/>

        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Pending Stock"/>

        <EditText
            android:id="@+id/edtStockPending"
            android:focusable="false"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:hint="50"
            android:inputType="number"/>

        <TextView
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/edtAvalStockSubmit"
            android:background="@drawable/updateborder"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:text="Submit"
            android:fontFamily="@font/poppinsregular"
            android:layout_centerInParent="true"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listViewNames"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

</LinearLayout>
